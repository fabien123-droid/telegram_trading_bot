# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration
DATABASE_URL=sqlite:///trading_bot.db
# For PostgreSQL: postgresql://user:password@localhost:5432/trading_bot

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Deriv API Configuration
DERIV_APP_ID=your_deriv_app_id_here
DERIV_API_URL=wss://ws.derivws.com/websockets/v3

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# MetaTrader 5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# Interactive Brokers Configuration
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key
NEWS_API_KEY=your_news_api_key

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Trading Configuration
DEFAULT_RISK_PERCENTAGE=1.0
MAX_POSITIONS_PER_USER=5
MIN_TRADE_AMOUNT=10.0
MAX_TRADE_AMOUNT=1000.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Application Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Scheduler Configuration
ANALYSIS_INTERVAL_MINUTES=5
CLEANUP_INTERVAL_HOURS=24
HEARTBEAT_INTERVAL_SECONDS=30

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
USER_COMMANDS_PER_MINUTE=10

# Notification Configuration
ADMIN_TELEGRAM_ID=your_admin_telegram_id
ERROR_NOTIFICATION_ENABLED=true
TRADE_NOTIFICATION_ENABLED=true

